{
  "manifest_version": 2,

  "name": "Bitcoin market watcher",
  "description": "This extension coinmarketcap.com for prices",
  "version": "1.0",
  "options_page": "options.html",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "bitcoin.png"
  },
  "permissions": [
    "storage"
  ]
}
